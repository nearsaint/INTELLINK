.login {
  background-color: #0355e5;
  width: 100%;
  height: 100%;
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.login > .bg {
    position: absolute;
    z-index: 1;
    top: 60rpx;
    left: 0;
    right: 0;
    width: 100%;
}
.login > .logo {
    position: absolute;
    top: 160rpx;
    left: 50%;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);
    height: 200rpx;
    width: 200rpx;
    z-index: 2;
}
.login > .title {
    position: absolute;
    top: 380rpx;
    left: 50%;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);
    color: #fff;
    font-size: 36rpx;
    z-index: 3;
}
.login > .btn {
    font-size: 32rpx;
    color: #fff;
    background: #82d303;
    position: absolute;
    bottom: 60rpx;
    width: calc(100% - 80rpx);
}
.login > .btn > .iconfont {
      font-size: 36rpx;
      margin-right: 10rpx;
}

